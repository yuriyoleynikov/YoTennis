@model IEnumerable<MyMatchModel>

@{
    ViewData["Title"] = "Home Page";
}

<p><a asp-action="Create" asp-controller="Match" class="btn btn-default btn-lg">Create Match</a></p>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelMatch => match.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelMatch => match.Date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Index", "Match", new { id = match.Name }) |
                    @Html.ActionLink("Details", "Details", new { id = match.Name }) |
                    @Html.ActionLink("Delete", "Delete", "Home", new { id = match.Name })
                </td>
            </tr>
        }
    </tbody>
</table>