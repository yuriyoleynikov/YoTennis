@model PlayingTiebreakModel

@{
    ViewData["Title"] = "Playing Tiebreak";
    ViewBag.MatchId = Model.Id;
}

@Html.Partial("Restart")
@Html.Partial("MatchState", Model.Match)
@Html.Partial("TiebreakState", Model.Match)
@Html.Partial("PlayingTiebreakForm", Model.Form,
    new ViewDataDictionary(ViewData) { ["FirstPlayerName"] = Model.Match.FirstPlayer, ["SecondPlayerName"] = Model.Match.SecondPlayer })

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @Html.Partial("PlayingTiebreakFormScripts")
}
