@model PlayingGameModel

@{
    ViewData["Title"] = "Playing Game";
    ViewBag.MatchId = Model.Id;
}

@Html.Partial("Restart")
@Html.Partial("MatchState", Model.Match)
@Html.Partial("GameState", Model.Match)

@Html.Partial("PlayingGameForm", Model.Form,
    new ViewDataDictionary(ViewData) { ["FirstPlayerName"] = Model.Match.FirstPlayer, ["SecondPlayerName"] = Model.Match.SecondPlayer })
@Html.Partial("CompletedAndNotFinishedForm")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @Html.Partial("PlayingGameFormScripts")
}