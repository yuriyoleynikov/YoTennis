@model AddMatchViewModel

@{
    ViewData["Title"] = "Add match";
}

<h2>Add match</h2>



<form asp-action="Add" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group my-center">
            <label asp-for="@Model.Date" class="control-label"></label>
            <input asp-for="@Model.Date" type="datetime-local" class="form-control center-block" />
            <span asp-validation-for="@Model.Date" class="text-danger" />
        </div>

        <div class="form-group my-center">
            <label asp-for="FirstPlayer" class="control-label"></label>
            <input asp-for="FirstPlayer" class="form-control center-block" />
            <span asp-validation-for="FirstPlayer" class="text-danger" />
        </div>

        <div class="form-group my-center">
            <label asp-for="SecondPlayer" class="control-label"></label>
            <input asp-for="SecondPlayer" class="form-control center-block" />
            <span asp-validation-for="SecondPlayer" class="text-danger" />
        </div>

        <div class="form-group my-center">
            <label asp-for="FirstPlayerSet1" class="control-label"></label>
            <input asp-for="FirstPlayerSet1" class="form-control center-block" />
            <span asp-validation-for="FirstPlayerSet1" class="text-danger" />
        </div>

        <div class="form-group my-center">
            <label asp-for="SecondPlayerSet1" class="control-label"></label>
            <input asp-for="SecondPlayerSet1" class="form-control center-block" />
            <span asp-validation-for="SecondPlayerSet1" class="text-danger" />
        </div>
        
        <div class="form-group match-container center-container">
            <div>
                <input type="submit" value="Add match" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>