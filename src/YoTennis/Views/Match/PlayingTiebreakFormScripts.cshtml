<script>
    var currentSpeed = null;
    var previousSpeedBtnClass;
    function onSpeedClicked(speed) {
        if (currentSpeed) {
            document.getElementById(currentSpeed + "-btn").className = previousSpeedBtnClass;
        }
        if (currentSpeed === speed) {
            speed = "unspecified";
            currentSpeed = null;
        }
        else {
            currentSpeed = speed;
            var btn = document.getElementById(currentSpeed + "-btn");
            previousSpeedBtnClass = btn.className;
            btn.className = previousSpeedBtnClass + " active";
        }
        document.getElementById("serve-speed").value = speed;
    }
    function sendCommand(action) {
        var form = document.getElementById("commandForm");
        form.action = "/Match/" + action + "/@ViewBag.MatchId";
        form.submit();
    }
    function setPointCommand(action) {
        var form = document.getElementById("commandForm");
        form.action = "/Match/" + action + "/@ViewBag.MatchId";
        document.getElementById("step1").style.display = "none";
        document.getElementById("step2").style.display = "block";
    }
    function setPointKind(kind) {
        document.getElementById("point-kind").value = kind;
    }
</script>
