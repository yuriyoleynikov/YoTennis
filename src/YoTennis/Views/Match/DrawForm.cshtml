@model DrawCommand

<form asp-action="Draw">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PlayerOnLeft" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>
                    <input asp-for="PlayerOnLeft" type="radio" value="First" />
                    @ViewData["FirstPlayerName"]
                </label>
                <label>
                    <input asp-for="PlayerOnLeft" type="radio" value="Second" />
                    @ViewData["SecondPlayerName"]
                </label>
                <span asp-validation-for="PlayerOnLeft" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PlayerServes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <label>
                    <input asp-for="PlayerServes" type="radio" value="First" />
                    @ViewData["FirstPlayerName"]
                </label>
                <label>
                    <input asp-for="PlayerServes" type="radio" value="Second" />
                    @ViewData["SecondPlayerName"]
                </label>
                <span asp-validation-for="PlayerServes" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Start" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
