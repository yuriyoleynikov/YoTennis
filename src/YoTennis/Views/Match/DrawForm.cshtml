@model DrawCommand
<div class="test-container">
    <form asp-action="Draw/@ViewBag.MatchId">
        <div id="player1">
            Select @ViewData["FirstPlayerName"]
        </div>
        <div id="player2">
            Select @ViewData["SecondPlayerName"]
        </div>
        <div class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerOnLeft" class="control-label"></label>
                <div class="">
                    <label>
                        <input asp-for="PlayerOnLeft" type="radio" value="First" />
                        @ViewData["FirstPlayerName"]
                    </label>
                    <label>
                        <input asp-for="PlayerOnLeft" type="radio" value="Second" />
                        @ViewData["SecondPlayerName"]
                    </label>
                    <span asp-validation-for="PlayerOnLeft" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PlayerServes" class="control-label"></label>
                <div class="">
                    <label>
                        <input asp-for="PlayerServes" type="radio" value="First" />
                        @ViewData["FirstPlayerName"]
                    </label>
                    <label>
                        <input asp-for="PlayerServes" type="radio" value="Second" />
                        @ViewData["SecondPlayerName"]
                    </label>
                    <span asp-validation-for="PlayerServes" class="text-danger" />
                </div>
            </div>
            <div class="form-group match-container center-container">
                <div>
                    <input type="submit" value="Start" class="btn btn-default" />
                </div>
            </div>
        </div>
        <div></div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
